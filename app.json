{
  "expo": {
    "name": "league",
    "slug": "leaguechampion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "scheme": "league",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dimalit778.league"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.dimalit778.league"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/app-icon.png"
    },
    "plugins": [
      "expo-router",

      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to use the camera for your avatar.",
          "isAccessMediaLocationEnabled": true,
          "granularPermissions": ["audio", "photo"]
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/app-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "infoPlist": {
              "NSCameraUsageDescription": "We use your photo library to let you upload an avatar for your league profile.",
              "NSLocalNetworkUsageDescription": "Allow local network for development",
              "NSBonjourServiceTypes": ["_expo._tcp"],
              "NSAppTransportSecurity": {
                "NSAllowsLocalNetworking": true,
                "NSAllowsArbitraryLoads": true,
                "NSExceptionDomains": {
                  "localhost": {
                    "NSIncludesSubdomains": false,
                    "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
                    "NSTemporaryExceptionMinimumTLSVersion": "1.2"
                  },
                  "127.0.0.1": {
                    "NSIncludesSubdomains": false,
                    "NSTemporaryExceptionAllowsInsecureHTTPLoads": true
                  },
                  "192.168.0.0": {
                    "NSIncludesSubdomains": true,
                    "NSTemporaryExceptionAllowsInsecureHTTPLoads": true
                  },
                  "192.20.0.36": {
                    "NSIncludesSubdomains": true,
                    "NSTemporaryExceptionAllowsInsecureHTTPLoads": true
                  },
                  "10.0.0.0": {
                    "NSIncludesSubdomains": true,
                    "NSTemporaryExceptionAllowsInsecureHTTPLoads": true
                  }
                }
              }
            }
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0730f614-1c6a-437b-b74b-508698797f3e"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/0730f614-1c6a-437b-b74b-508698797f3e"
    },
    "runtimeVersion": "1.0.0",
    "owner": "dimalit778"
  }
}
